.container
  .col-md-12{:id => "post_#{post.id}"}
    .panel.panel-primary
      .panel-heading
        .panel-title
          =post.title
      .panel-body
        =post.description
      .col-md-12{:id => "div_#{post.id}"}
      .panel-footer
        = link_to "Edytuj", board_post_edit_ajax_path(@board,post), remote: true
        = link_to "Destroy", [@board,post], method: :delete, class: "btn btn-danger", remote: true
